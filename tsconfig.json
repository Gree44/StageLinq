{
	"compilerOptions": {
    "target": "es2020",
    "moduleResolution": "node16",
    "module": "node16",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },

  "include": ["**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "vitest.config.ts"]
}
